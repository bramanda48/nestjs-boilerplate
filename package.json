{
  "name": "nestjs-boilerplate",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "ctix:create": "ctix create -p tsconfig.json -v",
    "ctix:clean": "ctix clean -p tsconfig.json -v",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:show": "npm run typeorm -- migration:show --config src/database/config/typeorm.config.ts",
    "migration:generate": "npm run typeorm -- migration:generate --config src/database/config/typeorm.config.ts -n",
    "migration:run": "npm run typeorm -- migration:run --config src/database/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm -- migration:revert --config src/database/config/typeorm.config.ts",
    "schema:sync": "npm run typeorm -- schema:sync --config src/database/config/typeorm.config.ts",
    "schema:log": "npm run typeorm -- schema:log --config src/database/config/typeorm.config.ts",
    "schema:drop": "npm run typeorm -- schema:drop --config src/database/config/typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "8.4.2",
    "@nestjs/config": "2.1.0",
    "@nestjs/core": "8.4.2",
    "@nestjs/platform-express": "8.4.2",
    "@nestjs/serve-static": "^2.2.2",
    "@nestjs/swagger": "^5.2.0",
    "@nestjs/throttler": "2.0.1",
    "@nestjs/typeorm": "^8.0.3",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "compression": "^1.7.4",
    "cross-env": "^7.0.3",
    "helmet": "^5.0.2",
    "js-yaml": "^4.1.0",
    "nest-winston": "^1.6.2",
    "nestjs-typeorm-paginate": "^3.1.3",
    "pg": "^8.7.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.5.5",
    "swagger-ui-express": "^4.3.0",
    "typeorm": "0.3.1",
    "typeorm-seeding": "^1.6.1",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0-beta.0",
    "@nestjs/cli": "8.2.4",
    "@nestjs/schematics": "8.0.8",
    "@nestjs/testing": "8.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "16.11.26",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "ctix": "0.5.2",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "27.5.1",
    "prettier": "2.6.0",
    "source-map-support": "0.5.21",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-loader": "9.2.8",
    "ts-node": "10.7.0",
    "tsconfig-paths": "3.14.0",
    "typescript": "4.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
